<h1>Edit User</h1>

<%= form_for @user do |form| %>
    <%= render 'shared/error_messages', :object => form.object %>
    <div class="form">
      <p>
          <%= form.label :name, "Name" %>
          <%= form.text_field :name %>
          <%= form.label :email, "Email" %>
          <%= form.text_field :email %>
          <%= form.label :role, "Role" %>
          <%= select_tag("user_role",options_for_select(Role.all.map { |role| role.name },@user.roles.first.nil? ? ENV['DEFAULT_ROLE'] : @user.roles.first.name )) %>
      </p>
      <%= form.submit %>
    </div>
<% end %>