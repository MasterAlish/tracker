<h1>Attachments</h1>

<table class="table-striped table table-hover table-condensed">
  <thead>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Url</th>
    <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <%@attachments.each do |attachment| %>
      <tr>
        <td><%= link_to "##{attachment.id}",attachment %></td>
        <td><%= attachment.url.identifier%></td>
        <td><%= attachment.url.url %></td>
        <td><%= time_ago_in_words(attachment.created_at.in_time_zone("Astana")) %> ago</td>
        <td>
          <div class="btn-group">
            <%= link_to "Delete", attachment_path(attachment), method: :delete, class: "btn btn-small btn-danger" %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>