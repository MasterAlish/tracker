<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "##{@ticket.id}", ticket_path(@ticket), id: "ticket" %>
      <span class="ticket-description"><%= @ticket.name %></span>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Tickets", tickets_path %></li>
          <% if user_signed_in? %>
              <% if current_user.has_role? :admin %>
                  <li><%= link_to 'Users', users_path %></li>
              <% end %>
              <li><%= link_to 'Edit account', edit_user_registration_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path,
                              :method => 'delete' %></li>
          <% else %>
              <li><%= link_to 'Sign in', new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
      <div class="properties hidden">
          <div class="clr"></div>
        <div class="part">
          <% @properties.each do |property|%>
              <div><b><%=property[:name]%>:</b> <%=property[:format]%></div>
          <% end %>
        </div>
      </div>
    </div>
    <a href="#" class="btn-micro updown"><i class="icon-chevron-down"></i></a>
  </div>
</header>