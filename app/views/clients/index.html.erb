<h1>Clients </h1>
<div class="navbar">
  <%= link_to(new_client_path, class: "btn btn-small") do %>
      <i class="icon-plus-sign"></i> Add new client
  <% end %>
</div>

<table class="table-striped table table-hover table-condensed">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>E-mail</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <%@clients.each do |client| %>
      <tr class="clickable_row">
        <td><%=link_to client.id, client %></td>
        <td><%=client.name %></td>
        <td><%=client.email %></td>
        <td>
          <div class="btn-group">
            <%= link_to "Edit", edit_client_path(client),class: "btn btn-small btn-info" %>
            <%= link_to "Delete",client, method: :delete,class: "btn btn-small btn-danger", confirm: "Are you sure?" %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
